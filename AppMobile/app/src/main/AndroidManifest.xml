<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.fablabsantiago.smartcities.app.lebikee"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity
            android:name=".StartActivity"
            android:theme="@style/StartTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".LeBikeActivity"
                  android:label="LeBike"
                  android:theme="@style/LeBikeTheme"
                  android:parentActivityName=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartActivity"/>
        </activity>

        <activity android:name=".LePatrimoniosActivity"
                  android:label="LePatrimonios"
                  android:theme="@style/LePatrimonios"
                  android:parentActivityName=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartActivity"/>
        </activity>

        <activity android:name=".OnRouteMapActivity"
                  android:label="LeBike"
                  android:parentActivityName=".LeBikeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LeBikeActivity"/>
        </activity>

        <service android:name=".OnRouteLocationService" />
    </application>


</manifest>