<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="0.95"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Dónde vas?"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"/>
        <ListView
            android:id="@+id/destinationsList"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#5f5f5f"
            android:alpha="0.8">
        </ListView>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"/>
        <Button
            android:id="@+id/destination_otro"
            android:layout_width="@dimen/nuevo_destino_button_size"
            android:layout_height="@dimen/nuevo_destino_button_size"
            android:layout_gravity="right"
            android:layout_marginTop="-40dp"
            android:gravity="center"
            android:textColor="#5f5f5f"
            android:textSize="15sp"
            android:background="@drawable/ic_nuevo_destino_button"
            android:onClick="otroRoute"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bottom_bar_horizontal_margin"
        android:layout_marginRight="@dimen/bottom_bar_horizontal_margin"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/bottom_bar_buttons_size"
            android:layout_height="@dimen/bottom_bar_buttons_size"
            android:background="@drawable/ic_destinos_button"
            android:textSize="12sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="@dimen/bottom_bar_buttons_size"
            android:layout_height="@dimen/bottom_bar_buttons_size"
            android:background="@drawable/ic_misalertas_button"
            android:textSize="12sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="@dimen/bottom_bar_buttons_size"
            android:layout_height="@dimen/bottom_bar_buttons_size"
            android:background="@drawable/ic_perfil_button"
            android:textSize="12sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="@dimen/bottom_bar_buttons_size"
            android:layout_height="@dimen/bottom_bar_buttons_size"
            android:background="@drawable/ic_amigos_button"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="15dp"/>

</LinearLayout>